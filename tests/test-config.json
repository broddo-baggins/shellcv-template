{
  "testFramework": "jest",
  "version": "1.0.0",
  "lastUpdated": "2025-10-23",
  
  "coverage": {
    "enabled": true,
    "threshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "reportFormats": ["text", "html", "json", "lcov"],
    "outputDirectory": "./coverage"
  },
  
  "testEnvironment": "jsdom",
  "testTimeout": 5000,
  "verbose": true,
  
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/?(*.)+(spec|test).js"
  ],
  
  "collectCoverageFrom": [
    "game/**/*.js",
    "!game/**/*.test.js",
    "!**/node_modules/**"
  ],
  
  "mocks": {
    "localStorage": true,
    "sessionStorage": true,
    "console": false,
    "Math.random": false
  },
  
  "gameConfig": {
    "startingEnergy": 100,
    "startingCredibility": 50,
    "startingBudget": 0,
    "startingMorale": 75,
    "startingVelocity": 20,
    "maxLevel": 7,
    "encountersPerBoss": [5, 12, 20, 30, 42, 56, 70],
    "xpPerLevel": [100, 300, 600, 1000, 1500, 2500, 999999],
    "maxEnergy": [100, 120, 150, 180, 200, 250, 300],
    "budgetPerLevel": [0, 25000, 100000, 250000, 500000, 1000000, 9999999],
    "velocityPerLevel": [20, 25, 30, 35, 40, 45, 50]
  },
  
  "encounterConfig": {
    "dailyProbability": {
      "level1-2": 0.70,
      "level3-4": 0.40,
      "level5-7": 0.30
    },
    "stakeholderProbability": {
      "level1-2": 0.20,
      "level3-4": 0.30,
      "level5-7": 0.30
    },
    "crisisProbability": {
      "level1-2": 0.10,
      "level3-4": 0.30,
      "level5-7": 0.40
    },
    "minEncounters": 8,
    "maxPressure": 100
  },
  
  "testData": {
    "sampleEncounter": {
      "id": "test_encounter",
      "title": "Test Situation",
      "description": "This is a test encounter",
      "choices": [
        { "text": "Choice 1", "energy": -10, "xp": 10, "success": 1.0 },
        { "text": "Choice 2", "credibility": +5, "xp": 8, "success": 0.9 },
        { "text": "Choice 3", "morale": +10, "xp": 12, "success": 0.8 },
        { "text": "Choice 4", "budget": -5000, "xp": 15, "success": 0.7 }
      ]
    },
    "sampleState": {
      "name": "TEST_USER",
      "level": 1,
      "xp": 0,
      "energy": 100,
      "credibility": 50,
      "budget": 0,
      "morale": 75,
      "velocity": 20,
      "inventory": [],
      "currentDungeon": 1,
      "encounterCount": 0,
      "decisionsCount": 0,
      "completedBosses": []
    }
  },
  
  "validationRules": {
    "energy": { "min": 0, "max": 300 },
    "credibility": { "min": 0, "max": 100 },
    "budget": { "min": 0, "max": 99999999 },
    "morale": { "min": 0, "max": 100 },
    "velocity": { "min": 10, "max": 100 },
    "level": { "min": 1, "max": 7 }
  },
  
  "testCategories": {
    "unit": {
      "pattern": "*.test.js",
      "timeout": 5000
    },
    "integration": {
      "pattern": "*.integration.test.js",
      "timeout": 10000
    },
    "e2e": {
      "pattern": "*.e2e.test.js",
      "timeout": 30000
    }
  }
}

